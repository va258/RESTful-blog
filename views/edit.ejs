<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
      <h1>This is a page to edit posts!</h1>
      <h1>Edit <%= blog.title %></h1>
       <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
           <div class="field">
               <label>Title</label>
               <input type="text" name="blog[title]" value="<%= blog.title%>">
           </div>
           <div class="field">
               <label>Image</label>
               <input type="text" name="blog[image]" value="<%= blog.image%>">
           </div>
           <div class="field">
               <label>Description</label>
               <textarea name="blog[body]" placeholder="body"><%= blog.body%></textarea>
           </div> 
           <button class="ui big violet basic button">Update post!</button>
           <a class="delete ui floated big basic red button" href="/blogs">Cancel</a>
       </form>
    </div>
</div>
<% include ./partials/footer %>